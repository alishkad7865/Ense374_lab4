<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <title>to-do-list</title>
</head>
<body>
    <div class="todo_card">
        <h1 style="margin-top: 4%;text-align: center;">to do </h1>
        <div class="card" style="width: 18rem;  width: 25rem; margin-left: auto; margin-right: auto; margin-top: 4%;">
            <div class="shadow bg-white rounded">
                
                <div class="accordion" id="accordionExample">
                    <div class="card-header" id="headingOne">
                        <a class="btn btn-link btn-block text-left" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            logged in as a@b.com
                        </a>
                    </div>
                
                    <div id="collapseOne" class="collapse hide" aria-labelledby="headingOne" data-parent="#accordionExample">
                           <form action="/logout" method="GET"> <input class="btn btn-lg btn-primary btn-block" style="margin-top: 5%; margin-bottom: 5%; width: 80%; margin-left: 10%;" type="submit" value="Log Out"></form>
                        </div>
                </div> 
            </div>
        </div>     
    </div>

    <div class="card table_tsk" style="border: 1px solid rgba(0,0,0,0);">
        <div class="shadow p-3 mb-5 rounded" style="background-color: rgba(0,0,0,.12);">
          <table class="">
            <ul class="list-group list-group-flush" id="myUL">
            <form>
                <div class="custom-control custom-checkbox  task-sty">
                  <input type="checkbox" class="custom-control-input" id="customCheck3">
                  <label class="custom-control-label" for="customCheck3">This task is climed by A@b</label>
                  <input type="submit" class="form-sign-in" style=" float:right; padding: 2%; width: 20%;" value="Abandon"/>
                </div>
            </form>
            <form>
                <div class="task-sty">
                    <input type="submit" class="form-sign-in" id="clbox" style=" float:right; padding: 2%;width: 20%;" value="Claim"/>
                    
                    <li class="list-group">This task is yet to be claimed</li>
                    <!-- <label class="custom-control-label" for="clbox"></label> -->
                </div>
            </form>
            <li class="list-group-item task-sty">This is claimed by someone else</li>
            <s class="list-group-item task-sty">This is completed by someone else</s>
            <form>
                <div class="custom-control custom-checkbox  task-sty">
                  <input type="checkbox" class="custom-control-input" id="customCheck2" checked="checked">
                  <label class="custom-control-label" for="customCheck2"><s>This task is completed</s></label>
                </div>
            </ul>
        </form>
        <div>
            <button class="form-signin" style="width: 20%; float:right;" onclick="newElement()">Add</button><input type="text" id="myInput" class="fr_input" style="width: 80%;" placeholder="Add task here"/>
        </div>
        <button type="button" class="form-signin" id="remove_check" style="max-width: 100%; padding: 2%;">Remove_Completed</button>
          </table>
        </div>
      </div>
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
      <script>
        function newElement(){
            var division = document.createElement("div");
            var inputValue= document.getElementById("myInput").value;
            var t = document.createTextNode(inputValue); // var division = document.createElement("div");
            document.getElementById("myUL").appendChild(division);
            division.classList.add("custom-control");
            division.classList.add("custom-checkbox");
            division.classList.add("task-sty");// division.appendChild(li);
            var li = document.createElement("label");  
            var check = document.createElement("input");
            division.appendChild(check);
            check.setAttribute("type","checkbox");
            check.classList.add("custom-control-input");
            division.appendChild(li);
            li.appendChild(t);
            li.classList.add("custom-control-label");
            li.classList.add("strikethrough")
            var idlist= Math.floor((Math.random() *10000000)+1);
            check.setAttribute("id",idlist);
            li.setAttribute("for",idlist);
        }

        $("#remove_check").on("click",function(){
            $("input:checkbox").each(function() {
                if ($(this).is(":checked")) {
                $(this).parent().remove();
                $(this).remove();
                }
            });
        });

      </script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-LtrjvnR4Twt/qOuYxE721u19sVFLVSA4hf/rRt6PrZTmiPltdZcI7q7PXQBYTKyf" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>  
</body>
</html>
